{
  "name": "excel-academy-website",
  "version": "1.0.0",
  "description": "A modern, responsive website for Excel Academy",
  "main": "index.html",
  "scripts": {
    "dev": "browser-sync start --server --files \"**/*.html, **/*.css, **/*.js\"",
    "lint:html": "htmlhint \"**/*.html\"",
    "lint:css": "stylelint \"**/*.css\"",
    "lint:js": "eslint \"**/*.js\"",
    "lint": "npm-run-all --parallel lint:*",
    "format": "prettier --write \"**/*.{html,css,js,json,md}\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "node build-simple.js",
    "start": "npx serve -s dist"
  },
  "keywords": [
    "education",
    "school",
    "responsive",
    "tailwindcss",
    "accessibility"
  ],
  "author": "Excel Academy",
  "license": "MIT",
  "browserslist": [
    "defaults",
    "not IE 11",
    "not IE_Mob 11",
    "maintained node versions"
  ],
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "browser-sync": "^2.29.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "htmlhint": "^1.1.4",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "postcss-cli": "^10.1.0",
    "prettier": "^3.1.1",
    "stylelint": "^16.2.1",
    "stylelint-config-standard": "^34.0.0",
    "tailwindcss": "^4.1.11"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.5.1"
  }
}
